@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="identity">
    <div class="identity__block">
        <div class="identity_name">Вход</div>
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-text" />
                <span asp-validation-for="Input.Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Пароль</label>
                <input asp-for="Input.Password" class="form-text" />
                <span asp-validation-for="Input.Password"></span>
            </div>
            <div class="form-group">
                <label>
                    <input asp-for="Input.RememberMe">
                    Запомнить меня
                </label>
            </div>
            <div class="form-group">
                <button type="submit" class="form-btn">Войти</button>
            </div>
            <div class="links-group">
                <p>Нет аккаунта? </p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Регистрация</a>
            </div>
            <div class="links-group">
                <p>Забыли пароль? </p>
                <a id="forgot-password" asp-page="./ForgotPassword">Востановить</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

